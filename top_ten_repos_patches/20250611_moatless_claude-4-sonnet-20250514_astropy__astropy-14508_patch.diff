 def _format_float(value):
     """Format a floating number to make sure it gets the decimal point."""
+    # First try the default string representation which is often more compact
+    value_str = str(value)
+    
+    # Normalize scientific notation to uppercase E (FITS standard)
+    if "e" in value_str:
+        value_str = value_str.replace("e", "E")
+    
+    # Ensure it has a decimal point for floats
+    if "." not in value_str and "E" not in value_str:
+        value_str += ".0"
+    
+    # If the string representation fits in 20 characters, use it
+    if len(value_str) <= 20:
+        return value_str
+    
+    # Otherwise, fall back to the more precise formatting
