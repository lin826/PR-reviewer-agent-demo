+    def test_formfield_for_manytomany_respects_widget_parameter(self):
+        """
+        formfield_for_manytomany() should respect a custom widget passed in kwargs,
+        even when admin features like filter_horizontal are configured.
+        """
+        class CustomSelectMultiple(forms.SelectMultiple):
+            def __init__(self, *args, **kwargs):
+                super().__init__(*args, **kwargs)
+                self.attrs.update({'class': 'custom-widget'})
+
+        class AdvisorAdminWithCustomWidget(admin.ModelAdmin):
+            filter_horizontal = ['companies']
+            
+            def formfield_for_manytomany(self, db_field, request, **kwargs):
+                if db_field.name == 'companies':
+                    kwargs['widget'] = CustomSelectMultiple()
+                return super().formfield_for_manytomany(db_field, request, **kwargs)
+
+        ma = AdvisorAdminWithCustomWidget(Advisor, admin.site)
+        f = ma.formfield_for_manytomany(Advisor._meta.get_field('companies'), request=None)
+        
+        # The custom widget should be preserved, not overridden by filter_horizontal
+        self.assertIsInstance(f.widget, CustomSelectMultiple)
+        self.assertIn('custom-widget', f.widget.attrs.get('class', ''))
+
+        # Test direct widget parameter as well
+        f_direct = ma.formfield_for_manytomany(
+            Advisor._meta.get_field('companies'), 
+            request=None, 
+            widget=CustomSelectMultiple()
+        )
+        self.assertIsInstance(f_direct.widget, CustomSelectMultiple)
+        self.assertIn('custom-widget', f_direct.widget.attrs.get('class', ''))
