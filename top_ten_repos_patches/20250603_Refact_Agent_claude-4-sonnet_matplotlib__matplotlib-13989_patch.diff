+def test_hist_range_density():
+    """Test that hist() respects range parameter when density=True."""
+    # Regression test for issue where range parameter was ignored
+    # when density=True and bins was a string like "auto"
+    np.random.seed(42)
+    data = np.random.rand(100)
+    
+    # Test with string bins and density=True
+    _, bins_auto, _ = plt.hist(data, bins='auto', range=(0, 1), density=True)
+    assert bins_auto[0] == 0.0, f"First bin should be 0.0, got {bins_auto[0]}"
+    assert bins_auto[-1] == 1.0, f"Last bin should be 1.0, got {bins_auto[-1]}"
+    
+    # Test with integer bins and density=True
+    _, bins_int, _ = plt.hist(data, bins=10, range=(0, 1), density=True)
+    assert bins_int[0] == 0.0, f"First bin should be 0.0, got {bins_int[0]}"
+    assert bins_int[-1] == 1.0, f"Last bin should be 1.0, got {bins_int[-1]}"
+    
+    # Test with other string bin methods
+    for bin_method in ['fd', 'sturges']:
+        _, bins_method, _ = plt.hist(data, bins=bin_method, range=(0, 1), density=True)
+        assert bins_method[0] == 0.0, f"First bin should be 0.0 for {bin_method}, got {bins_method[0]}"
+        assert bins_method[-1] == 1.0, f"Last bin should be 1.0 for {bin_method}, got {bins_method[-1]}"
